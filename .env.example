HOST=0.0.0.0
PORT=3000

VITE_API_PROXY=http://localhost:3000
# Optional UI label shown in the desktop-style status bar (for example: Production, Test, UAT)
APP_ENV_LABEL=Test

# Option A (recommended): single URL
# DATABASE_URL=postgres://cra_app:password@localhost:5432/cra_local

# Option B: discrete connection vars (used if DATABASE_URL is not set)
PGHOST=localhost
PGPORT=5432
PGDATABASE=cra_local
PGUSER=cra_app
PGPASSWORD=your_postgres_password

# Optional: increase if users attach multiple large files in one save.
JSON_BODY_LIMIT=50mb

# Session auth (server-side sessions)
SESSION_COOKIE_NAME=cra_sid
SESSION_TTL_HOURS=24
# SESSION_COOKIE_SECURE=true

# Optional: secret used to encrypt backup credentials stored in DB.
# If omitted, app uses a host-derived fallback key (acceptable for test VM, not ideal for production).
# BACKUP_CREDENTIALS_SECRET=change_this_to_a_long_random_string

# Bootstrap admin (used only when app_users is empty)
BOOTSTRAP_ADMIN_NAME=Admin
BOOTSTRAP_ADMIN_EMAIL=admin@example.com
BOOTSTRAP_ADMIN_PASSWORD=change_me
